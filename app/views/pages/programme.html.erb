<div class="container">
  <h1>Programme</h1>


  <h2>14 Janvier</h2>
  <% @workshops_1.each do |workshop| %>
    <div class="card">
      <div class="card-body">
        <p> <%= workshop.start_at.strftime("%H:%M")%> - <%= workshop.end_at.strftime("%H:%M") %></p>
        <p> <%= workshop.name %> - <%= workshop.speaker %> </p>
        <p> <%= workshop.description %> </p>
      </div>
    </div>
  <% end %>


  <h2>18 Janvier</h2>
  <% @workshops_2.each do |workshop| %>
    <div class="card">
        <div class="card-body">
          <p> <%= workshop.start_at.strftime("%H:%M")%> - <%= workshop.end_at.strftime("%H:%M") %></p>
          <p> <%= workshop.name %> - <%= workshop.speaker %> </p>
          <p> <%= workshop.description %> </p>
        </div>
      </div>
  <% end %>
</div>
