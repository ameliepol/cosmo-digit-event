<div class="container"><h1>Récapitulatif des inscriptions </h1>
</div>

<div id="Tab" class="container">
  <ul  class="nav nav-pills">
    <li class="active">
      <a  href="#participants" data-toggle="tab">Participants</a>
    </li>
    <li>
      <a href="#ateliers" data-toggle="tab">Ateliers</a>
    </li>
  </ul>
  <div class="tab-content clearfix">
    <div class="tab-pane active" id="participants">
      <table class="table table-bordered table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Nom</th>
            <th scope="col">Prénom</th>
            <th scope="col">Email</th>
            <th scope="col">Ateliers sélectionnés</th>
          </tr>
        </thead>
        <tbody>
          <% @participants.each do |participant| %>
          <tr>
            <td><%= participant.last_name %></td>
            <td><%= participant.first_name %></td>
            <td><%= participant.email %></td>
            <td><%= 1 %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="tab-pane" id="ateliers">
      <table class="table table-bordered table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Handle</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">1</th>
            <td>Bob</td>
            <td>Dylan</td>
            <td>@bdy</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
