<div class="container-dashboard">
  <h1>Récapitulatif des inscriptions</h1>
<br>
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Participants
      <%= link_to company_admin_participants_path(format: :csv), class: 'fas fa-arrow-circle-down' do %>
      <% end %></a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Ateliers
      <%= link_to company_admin_workshops_path(format: :csv), class: 'fas fa-arrow-circle-down' do %>
      <% end %></a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Questions
      <%= link_to company_admin_questions_path(format: :csv), class: 'fas fa-arrow-circle-down' do %>
      <% end %></a>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
      <table class="table table-bordered table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nom(s)</th>
            <th scope="col">Prénom(s)</th>
            <th scope="col">Email</th>
            <th scope="col">Ateliers sélectionnés</th>
          </tr>
        </thead>
        <tbody>
          <% @participants.each_with_index do |participant, index| %>
          <tr>
            <td><%= "#{index + 1}" %></td>
            <td><%= participant.last_name.upcase %></td>
            <td><%= participant.first_name.upcase %></td>
            <td><%= participant.email %></td>
            <td><% participant.bookings.each do |booking| %>
              <div><%= booking.workshop.start_at.strftime("%H:%M")%> - <%= booking.workshop.end_at.strftime("%H:%M") %> : <%= booking.workshop.name %>
              </div>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
      <table class="table table-bordered table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Ateliers</th>
            <th scope="col">Inscriptions</th>
          </tr>
        </thead>
        <tbody>
          <% @workshops.each do |workshop| %>
          <tr>
            <td><%= workshop.name %></td>
            <td><%= workshop.bookings.size %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
      <table class="table table-bordered table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Nom(s)</th>
            <th scope="col">Prénom(s)</th>
            <th scope="col">Email</th>
            <th scope="col">Organisme</th>
            <th scope="col">Questions</th>
          </tr>
        </thead>
        <tbody>
          <% @questions.each do |question| %>
          <tr>
            <td><%= question.last_name %></td>
            <td><%= question.first_name %></td>
            <td><%= question.email %></td>
            <td><%= question.organization %></td>
            <td><%= question.content %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
